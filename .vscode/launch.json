{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/output", // Исполняемый файл (не "main")
            "args": [], // Аргументы командной строки
            "stopAtEntry": false, // Остановка на точке входа
            "cwd": "${workspaceFolder}", // Рабочая директория
            "environment": [],
            "externalConsole": false, // Использовать встроенный терминал
            "MIMode": "gdb", // Режим отладчика
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // Задача для сборки перед отладкой
            "miDebuggerPath": "/usr/bin/gdb", // Путь к GDB
            "logging": {
                "moduleLoad": false, // Не показывать загрузку модулей
                "engineLogging": false, // Не показывать логи движка
                "trace": false, // Не показывать трассировку
                "traceResponse": false // Не показывать ответы трассировки
            }
        }
    ]
}